<p id="notice"><%= notice %></p>

<% cache @brewery do %>
<h2><%= @brewery.name %>
  <% if not @brewery.active  %>
      <span class="label label-info">retired</span>
  <% end %>
</h2>

<p>
  <i>Established at <%= @brewery.year %></i>
</p>
<p> Number of beers: <%= @brewery.beers.count %> </p>
<p><%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %></p>
<table>
<b>Oluet:</b>
	 <tbody>
		 <% @brewery.beers.each do |beer| %>
			<tr>
				<td><%= link_to beer.name, beer %></td>
		   </tr>
		 <% end %>
	</tbody>
</table>
<% end %>
<p>
	<% if @brewery.ratings.empty? %>
			Brewery has not yet been rated!
	<% else %>
			Brewery has <%= @brewery.ratings.count %> <%= @brewery.monikko(@brewery.ratings.count, 'rating', 'ratings') %>, average <%= @brewery.average_rating %>
	<% end %>
</p>
<%= edit_and_destroy_buttons(@brewery) %>

