
<div class="page-header">
  <h1>Rating Statistics
    <small>Total number of ratings: <%= @ratings.count %> </small></h1>
</div>


      <h3>Newest Ratings:</h3>
      <% @newest_rating.first(5).each do |rating| %>
          <li class="list-group-item"> <%= rating.to_s %> by <%= link_to rating.user.username, rating.user %> </li>
      <% end %>


      <h3>Most Active Users:</h3>
      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th></th>
          <th>favorite beer</th>
          <th>favorite brewery</th>
          <th>preferred style</th>
          <th>ratings</th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.username, user %></td>
              <td><%= link_to user.favorite_beer.name, user.favorite_beer %></td>
              <td><%= link_to user.favorite_brewery.name, user.favorite_brewery %></td>
              <td><%= link_to user.favorite_style.name, user.favorite_style %></td>
              <td><%= user.ratings.count %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

  <div class="row">
    <div class="col-md-3">
      <h4>Best beers</h4>
      <%= render 'list', items: @beers %>
    </div>
    <div class="col-md-3">
      <h4>Best breweries</h4>
      <%= render 'list', items: @breweries %>
    </div>
    <div class="col-md-3">
      <h4>Best styles</h4>
      <%= render 'list', items: @styles %>
    </div>
  </div>
